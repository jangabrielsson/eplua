        "type": "array",
        "items": {
          "type": "object",
          "properties": {
            "name": {
              "type": "string"
            },
            "id": {
              "type": "integer"
            }
          }
        }
      },
      "Notification": {
        "type": "object",
        "properties": {
          "id": {
            "type": "integer"
          },
          "name": {
            "type": "string"
          },
          "sms": {
            "type": "string"
          },
          "email": {
            "type": "string"
          },
          "push": {
            "type": "string"
          },
          "created": {
            "type": "integer"
          },
          "modified": {
            "type": "integer"
          }
        },
        "example": {
          "created": 6,
          "name": "name",
          "sms": "sms",
          "modified": 1,
          "id": 0,
          "email": "email",
          "push": "push"
