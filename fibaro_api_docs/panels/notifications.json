{
  "openapi": "3.0.1",
  "info": {
    "title": "Home Center",
    "description": "Notifications API",
    "version": "v1"
  },
  "servers": [
    {
      "url": "/api"
    }
  ],
  "paths": {
    "/panels/notifications": {
      "get": {
        "tags": ["notification panel"],
        "summary": "Get a list of all available notifications",
        "operationId": "getPanelsNotifications",
        "responses": {
          "200": {
            "description": "Returns notifications data",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/Notifications"
                }
              }
            }
          }
        }
      },
      "post": {
        "tags": ["notification panel"],
        "summary": "Create notification",
        "description": "Notification body",
        "operationId": "newPanelsNotification",
        "requestBody": {
          "description": "new notification body",
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/inline_object"
              }
            }
          },
          "required": true
        },
        "responses": {
          "201": {
            "description": "Returns notification data",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/Notification"
                }
              }
            }
          },
          "400": {
            "description": "Bad request",
            "content": {}
          },
          "404": {
            "description": "Not found",
            "content": {}
          }
        },
        "x-codegen-request-body-name": "body"
      }
    },
    "/panels/notifications/{notificationID}": {
      "get": {
        "tags": ["notification panel"],
        "summary": "Get notification",
        "operationId": "getPanelsNotification",
        "parameters": [
          {
            "name": "notificationID",
            "in": "path",
            "description": "ID of an existing notification",
            "required": true,
            "style": "simple",
            "explode": false,
            "schema": {
              "type": "integer"
            }
          }
